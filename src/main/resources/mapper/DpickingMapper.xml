<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxa.mapper.DpickingMapper">
    <resultMap id="DpickingResultMap" type="Dpicking">
        <result property="time" column="time"></result>
        <result property="code" column="code"></result>
        <result property="department" column="department"></result>
        <result property="dreview.mperson" column="mperson"></result>
        <result property="dreview.status" column="status"></result>
        <result property="dreview.reviewer" column="reviewer"></result>
    </resultMap>

    <select id="queryAll" resultMap="DpickingResultMap" parameterType="com.gxa.dto.DpickingDto">
        SELECT dp.time,dp.code,dp.department,dr.mperson,dr.status,dr.reviewer
        FROM d_picking dp,d_review dr
        WHERE dp.reviewId=dr.id
        <if test="department != null and department !=''">
            And dp.department=#{department}
        </if>
        <if test="dreview.status != null">
            And dr.status=#{dreview.status}
        </if>
        <if test="code != null and code !=''">
            And dp.code=#{code}
        </if>
        <if test="startTime !=null and startTime !='' and endTime !=null and endTime !=''">
            And dp.time=#{time} Between startTime and endTime
        </if>
    </select>
</mapper>