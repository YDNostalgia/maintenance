<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxa.mapper.UserMapper">
    <resultMap id="userResultMap" type="user">
        <id property="id" column="id"></id>
        <result property="userName" column="user_name"></result>
        <result property="pwd" column="pwd"></result>
        <result property="salt" column="salt"></result>
    </resultMap>

    <resultMap id="userResultMap1" type="user">
        <id property="id" column="id"></id>
        <result property="userName" column="user_name"></result>
        <result property="phoneNumber" column="phone_number"></result>
        <result property="roleName" column="role_name"></result>
        <result property="addTime" column="add_time"></result>
    </resultMap>
    <select id="queryByUserNameAndPwd" resultMap="userResultMap">
        SELECT user_name,pwd,salt FROM t_user WHERE user_name=#{userName} AND pwd=#{pwd}
    </select>
    <select id="queryByUserName" resultMap="userResultMap">
        SELECT user_name,pwd,salt FROM t_user WHERE user_name=#{userName}
    </select>
    <select id="queryPermsByUserName" resultType="java.lang.String">
        SELECT m.perm
        FROM t_user u,t_role r,t_user_role ur,t_menu m,t_role_menu rm
        WHERE u.id=ur.user_id AND ur.role_id=r.id AND r.id=rm.role_id AND rm.menu_id=m.id
          AND u.user_name=#{userName}
    </select>
    <select id="queryAll" resultMap="userResultMap1">
        SELECT u.id,u.user_name,u.phone_number,r.role_name,u.add_time
        FROM t_user u,t_role r,t_user_role ur
        WHERE u.id=ur.user_id AND ur.role_id=r.id
    </select>
</mapper>