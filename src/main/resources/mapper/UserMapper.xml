<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxa.mapper.UserMapper">
    <resultMap id="userResultMap" type="user">
        <id property="id" column="id"></id>
        <result property="userName" column="user_name"></result>
        <result property="pwd" column="pwd"></result>
        <result property="salt" column="salt"></result>
    </resultMap>
    <resultMap id="userResultMap1" type="user">
        <id property="id" column="id"></id>
        <result property="account" column="account"></result>
        <result property="userName" column="user_name"></result>
        <result property="phoneNumber" column="phone_number"></result>
        <result property="roleName" column="role_name"></result>
        <result property="addTime" column="add_time"></result>
        <result property="state" column="state"></result>
    </resultMap>


    <select id="queryByUserNameAndPwd" resultMap="userResultMap">
        SELECT user_name,pwd,salt FROM t_user WHERE user_name=#{userName} AND pwd=#{pwd}
    </select>
    <select id="queryByUserName" resultMap="userResultMap">
        SELECT user_name,pwd,salt FROM t_user WHERE user_name=#{userName}
    </select>

    <select id="queryPermsByUserName" resultType="java.lang.String">
        SELECT m.perm
        FROM t_user u,t_role r,t_user_role ur,t_menu m,t_role_menu rm
        WHERE u.id=ur.user_id AND ur.role_id=r.id AND r.id=rm.role_id AND rm.menu_id=m.id
          AND u.user_name=#{userName}
    </select>

    <select id="queryAll" resultMap="userResultMap1">
        SELECT u.id,u.account,u.user_name,u.phone_number,u.role_name,u.add_time,u.state,u.pwd,u.note
        FROM t_user u
        <if test="account != null and account!=''">
            WHERE u.account=#{account}
        </if>
        <if test="roleName != null and roleName !=''">
            WHERE u.role_name=#{roleName}
        </if>

        <if test="state != null and state!=''">
            WHERE u.state=#{state}
        </if>
    </select>


    <select id="queryRoleId" resultType="integer">
        SELECT r.id
        FROM t_role r
        WHERE r.role_name=#{roleName}
    </select>


    <insert id="add"  parameterType="user" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_user(account,role_name,user_name,pwd,phone_number,note)
        VALUES (#{account},#{roleName},#{userName},#{pwd},#{phoneNumber},#{note})
    </insert>

    <insert id="addUserRoleId">
        INSERT INTO t_user_role(user_id,role_id)
        VALUES (#{userId},#{roleId})
    </insert>

    <update id="update" parameterType="user">
        UPDATE t_user SET account=#{account},role_name=#{roleName},user_name=#{userName},pwd=#{pwd},phone_number=#{phoneNumber},note=#{note}
        WHERE id=#{id}
    </update>

    <delete id="delete" parameterType="integer">
        DELETE FROM t_user WHERE id=#{id}
    </delete>
</mapper>