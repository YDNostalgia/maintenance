<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxa.mapper.EquipmentDataMapper">
    <resultMap id="equipmentDataMap" type="equipmentData">
        <id property="categoryId" column="category_id"></id>
        <result property="categoryName" column="category_name"></result>
        <result property="dataCount" column="total"></result>
        <result property="updateTime" column="update_time"></result>
    </resultMap>

    <insert id="add">
        INSERT INTO t_equipment(category_id,category_name,update_time)
        VALUES (#{categoryId},#{categoryName},#{updateTime})
    </insert>

    <update id="update">
        UPDATE t_equipment
        SET category_name=#{categoryName},update_time=#{updateTime}
        WHERE category_id=#{categoryId}
    </update>

    <select id="queryAllEquipmentData" resultMap="equipmentDataMap" >
        SELECT te.category_id,te.category_name,te.update_time,v.total
        FROM t_equipment te,(SELECT td.category_id,count(td.category_id) total
                             From t_data td
                             GROUP BY td.category_id) v
        WHERE te.category_id = v.category_id
    </select>
</mapper>