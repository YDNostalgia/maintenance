<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxa.mapper.RoleMapper">
    <resultMap id="roleResultMap" type="role">
        <id property="id" column="id"></id>
        <result property="roleName" column="role_name"></result>
        <result property="desc" column="role_desc"></result>
        <result property="personnelNumber" column="personnel_number"></result>
        <result property="addTime" column="add_time"></result>
        <result property="state" column="role_state"></result>
    </resultMap>
    <select id="queryAll" resultMap="roleResultMap">
        SELECT r.id,r.role_name,r.role_desc,count(ur.id) AS personnel_number,r.add_time,r.role_state
        FROM t_user u,t_role r,t_user_role ur
        WHERE u.id=ur.user_id AND ur.role_id=r.id

        <if test="id != null and id!=''">
            AND r.id=#{id}
        </if>
        <if test="roleName != null and roleName !=''">
            AND r.role_name=#{roleName}
        </if>

        <if test="state != null and state!=''">
            AND r.state=#{state}
        </if>

        GROUP BY r.role_name
    </select>

    <insert id="add">
        INSERT INTO t_role(role_name,role_desc,role_state)
        VALUES (#{roleName},#{desc},#{state})
    </insert>

    <update id="update">
        UPDATE t_role SET role_name=#{roleName},role_desc=#{desc},role_state=#{state}
        WHERE id=#{id}
    </update>

    <delete id="delete">
        DELETE FROM t_role WHERE id=#{id}
    </delete>
</mapper>